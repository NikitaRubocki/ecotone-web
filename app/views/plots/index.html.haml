- content_for_title('Plots on Campus')
- content_for(:subnav) do
  = button_to('Add Plot', new_plot_path, class: 'button primary', title: 'Add a new plot', method: 'get') if current_user&.admin?
.gallery
  - @plots.each do |plot|
    .tile#plot
      .img-tile
        = image_tag(default_plot_photo(plot))
      .desc
        %h3= "Plot ##{plot.plot_id}"
        %p= truncate(plot.formatted_location_description, length:75, separator:' ')
      = link_to "", plot, title: "Details of #{plot}", class: "tile-link"
