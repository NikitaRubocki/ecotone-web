@import "bootstrap-sprockets";
@import "bootstrap";


// Variables & Mixins

$osu-orange: #C34500;
$gray-medium-light: #eaeaea;

@mixin box_sizing {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}


// Universal

// body {
//   padding-top: 60px;
//   font-family: 'Gudea', sans-serif;
// }

section {
  overflow: auto;
  margin-bottom: 10px;
}

h1, h2, h3, h4, h5, h6 {
  line-height: 1;
}

h1 {
  font-size: 3em;
  margin-bottom: 30px;
  text-align: center;
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}

.center {
  text-align: center;
}

<%# .btn {
  background-color: #F0F0F0;
  color: lighten($osu-orange, 5%);
  &:hover, &:focus {
    background-color: lighten($osu-orange, 5%);
    border-color: lighten($osu-orange, 5%);
    color: #FFF;
  }
  &:active {
    background-color: lighten($osu-orange, 10%) !important;
    border-color: lighten($osu-orange, 10%) !important;
  }
  &:disabled {
    background-color: lighten($osu-orange, 10%) !important;
    border-color: lighten($osu-orange, 10%) !important;
  }
}

.btn-primary {
  background-color: $osu-orange;
  border-color: $osu-orange;
  color: #FFF;
}

.btn-danger {
  border-color: #F0F0F0;
  &:hover {
    background-color: #FFF0F0;
    border-color: #D00;
    color: #D00;
  }
  &:active, &:focus {
    background-color: #D00 !important;
  }
} %>

nav.paginator {
  display: block;
  margin: 0 0 2em 0;
}

ul.pagination {
  margin: 0px;
}

.pagination li a {
  color: $osu-orange;
  &:hover {
    color: lighten($osu-orange, 5%);
  }
}

.pagination li.active a {
  background-color: $osu-orange;
  border-color: $osu-orange;
  &:hover {
    background-color: $osu-orange;
    border-color: $osu-orange;
  }
}

.alert {
  ul {
    margin: 0 0 30px 0;
  }
}

.alert .alert-heading {
  margin: 0 0 10px 0;
}

.alert ul {
  margin: 0px;
}

// Devise alerts

.alert-error {
    background-color: #f2dede;
    border-color: #eed3d7;
    color: #b94a48;
    text-align: left;
 }

.alert-alert {
    background-color: #f2dede;
    border-color: #eed3d7;
    color: #b94a48;
    text-align: left;
 }

.alert-success {
    background-color: #dff0d8;
    border-color: #d6e9c6;
    color: #468847;
    text-align: left;
 }

.alert-notice {
    background-color: #dff0d8;
    border-color: #d6e9c6;
    color: #468847;
    text-align: left;
 }

// Header

a.navbar-brand img {
  height: 48px;
  margin-top: -14px;
}

#logo {
  float: left;
  margin-right: 10px;
  font-size: 1.7em;
  color: #DDD;
  letter-spacing: -1px;
  padding-top: 9px;
  font-weight: bold;
  &:hover {
    color: #EEE;
    text-decoration: none;
  }
  &:active {
    color: #FFF;
  }
}

.subnav {
  height: 36px;
}

<%# .btn-group .btn {
  width: 80px;
} %>

.subnav .btn-primary {
  min-width: 130px;
}


// Footer

footer {
  margin-top: 45px;
  padding-top: 5px;
  border-top: 1px solid $gray-medium-light;
  color: $gray-light;
  ul {
    float: right;
    list-style: none;
    li {
      float: left;
      margin-left: 15px;
    }
  }
  a {
    color: $gray;
    &:hover {
      color: $gray-darker;
    }
  }
}

.debug_dump {
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
  @include box-sizing;
}


// Homepage

.jumbotron {
  background-image: url(<%= asset_path 'osucascades_background.jpg' %>);
}

.img-circle {
  margin: auto;
  display: block;
  height: 200;
  width: 200;
}


// Sign In

.sign-in {
  text-align: center;
  margin-top: 5rem;
  margin-bottom: 20rem;
  img {
    width: 191px;
    height: 46px;
  }
}

// Forms

input, textarea, select, .uneditable-input {
  border: 1px solid #bbb;
  width: 100%;
  margin-bottom: 15px;
  @include box_sizing;
}

input {
  height: auto !important;
}

input[type="checkbox"] {
  margin-bottom: 15px;
  box-shadow: none !important;
}

textarea {
  resize: vertical;
}

.field_with_errors {
  @extend .has-error;
  .form-control {
    color: $state-danger-text;
  }
}

.g-recaptcha {
  margin-bottom: 15px;
}

form img {
  margin-bottom: 20px;
}

label.form-label-photo {
  display: block;
}


// Model indexes

ul.indexing {
  list-style: none;
  margin: 0;
  padding: 0;
  margin-bottom: 25px;
  li {
    overflow: auto;
    padding: 10px 0;
    border-bottom: 1px solid $gray-lighter;
  }
  li.photo_list {
    img {
      width: 50px;
      height: 50px;
    }
    h3 {
      margin: 0px;
    }
    h4 {
      margin: 0px;
    }
  }
}

.gallery {
  width: auto;
  font-size: 0;
  margin: 0 auto;
  overflow: auto;
  padding: 10px 0;
}

.tile {
  margin: 5px;
  border: 1px solid $gray-lighter;
  float: left;
  width: 180px;
}

.tile:hover {
  border: 1px solid #777;
}

.tile img {
  width: 100%;
  height: 180px;
}

.plot_desc {
  padding: 5px;
  text-align: center;
  width: 180px;
  height: 200px;
}

.plant_desc {
  padding: 5px;
  text-align: center;
  width: 180px;
  height: 140px;
}

.citation {
  color: #4C4C4C;
  font-size: 0.8em;
}

.qr {
  border-width: 0;
  border-style: none;
  border-color: #0000ff;
  border-collapse: collapse;
  width: 50%;
}
.qr td {
  border-width: 0;
  border-style: none;
  border-color: #0000ff;
  border-collapse: collapse;
  padding: 0;
  margin: 0;
  width: 0px;
  height: 10px;
}
.qr td.black { background-color: #000; }
.qr td.white { background-color: #fff; }



// Biodiversity Report temperature slider / input range.
// See app/javascript/biodiversiy_reports

#temperature_wrapper input {
  width: 90%;
  display: inline;
}

#temperature_value {
  display: inline-block;
  width: 10%;
  text-align: right;
  font-size: 1.1em;
}

//Plot image carousel

.carousel-control-prev
 {
  position: absolute;
  top: 50%;
  bottom: 0;
  right: 440px;
  width:  30;
  font-size: 35px;
  color: $gray-medium-light;
  text-align: center;
  text-shadow: 0 1px 2px rgba(0, 0, 0, .6);
  background-color: rgba(0, 0, 0, 0);
  filter: alpha(opacity=50);
}

.carousel-control-next
 {
  position: absolute;
  top: 50%;
  bottom: 0;
  left: 270px;
  width:  20%; 
  font-size: 35px;
  color:	$gray-medium-light;
  text-align: center;
  text-shadow: 0 1px 2px rgba(0, 0, 0, .6);
  background-color: rgba(0, 0, 0, 0);
  filter: alpha(opacity=50);
}

.plot_photos {
  padding-left: 20px;
}
