.row
  .col-md-6.col-md-offset-3
    = form_for(@macroinvertebrate_sample, html: { multipart: true }) do |f|
      = form_errors_for(@macroinvertebrate_sample)
      = f.label :collected_on, 'Collection Date'
      = f.date_field :collected_on, class: 'form-control'
      = f.label :plot_id, 'Plot'
      = f.collection_select :plot_id, @plots, :id, :name, include_blank: 'Choose...'
      = f.label :location_within_plot
      = f.text_field :location_within_plot, class: 'form-control'
      = f.label :phylum
      = f.text_field :phylum, class: 'form-control'
      = f.label :quantity
      = f.text_field :quantity, class: 'form-control'
      = f.label :ecosystem_service
      = f.select(:ecosystem_service, MacroinvertebrateSample::ECOSYSTEM_SERVICES, {include_blank: 'Choose...'}, {class: 'form-control'})
      = f.label :photo
      = f.file_field :photo, class: 'form-control'
      = f.submit class: 'btn btn-primary'
