.row
  .col-md-6.col-md-offset-3
    = form_for(@nonvascular_plant_sample, html: { multipart: true }) do |f|
      = form_errors_for(@nonvascular_plant_sample)
      = f.label :collected_on, 'Collection Date'
      = f.date_field :collected_on, class: 'form-control'
      = f.label :plot_id, 'Plot'
      = f.collection_select :plot_id, @plots, :id, :name, include_blank: 'Choose...'
      = f.label :location_within_plot
      = f.text_field :location_within_plot, class: 'form-control'
      = f.label :description
      = f.text_area :description, class: 'form-control'
      = f.label :photo
      = f.file_field :photo, class: 'form-control'
      = f.submit class: 'btn btn-primary'
