- content_for_title("Nonvascular Plant Sample ##{@nonvascular_plant_sample.id}")
- content_for(:subnav) do
  .btn-public
    = button_to('Â« Samples', nonvascular_plant_samples_path, class: 'button primary', method: 'get')
  - if @nonvascular_plant_sample.editable_by?(current_user)
    .btn-admin
      = link_to 'Edit', edit_nonvascular_plant_sample_path(@nonvascular_plant_sample), class: 'btn', title: 'Edit sample'
      - if current_user&.admin?
        = link_to 'Delete', @nonvascular_plant_sample, method: :delete, data: { confirm: "Delete nonvascular_plant sample #{@nonvascular_plant_sample.id}?" }, class: 'btn btn-danger', title: 'Delete sample'
.content
  = render 'layouts/image_carousel', entity: @nonvascular_plant_sample
  .info
    %h2.heading#table-heading Information
    %table.table#vertical-table
      %thead
        %th.citation.italic{colspan: '2'} Last updated #{last_updated(@nonvascular_plant_sample)} by #{@nonvascular_plant_sample.user}
      %tbody
        %tr
          %th{scope: 'row'} Collection date
          %td= @nonvascular_plant_sample.collected_on
        %tr
          %th{scope: 'row'} Plot
          %td= @nonvascular_plant_sample.plot
        %tr
          %th{scope: 'row'} Location within plot
          %td= @nonvascular_plant_sample.location_within_plot
        %tr
          %th{scope: 'row'} Description
          %td= @nonvascular_plant_sample.description
