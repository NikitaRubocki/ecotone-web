- content_for_title(@plant.common_name.capitalize)
- content_for(:subnav) do
  = link_to 'Â« Back to plants', plants_path, class: 'btn btn-primary', title: 'List of all plants'
  - if current_user&.admin?
    .btn-group
      = link_to 'Edit', edit_plant_path(@plant), class: 'btn', title: "Edit #{@plant}"
      = link_to 'Delete', @plant, method: :delete, data: { confirm: "Delete #{@plant.common_name}?" }, class: 'btn btn-danger', title: "Delete #{@plant}"
    = link_to 'Download QR Code', { action: 'download_qr' }, 'data-turbolinks': false, class: 'btn', title: "QR Code for #{@plant}"
%section
  .col-md-5
    %h2 Photo
    - if @plant.photo.length > 1
      #plantCarousel.carousel{"data-interval" => "false"}
        .carousel-inner
          - @plant.photo.each_with_index do |image, index|
            %div{:class => "item #{index == 0 ? 'active' : ''}"}
              = image_tag(@plant.photo[index].variant(resize: "350x350"), class: 'plot_photos', alt: "Photo of #{@plant.photo}") unless @plant.new_record?
              %end
      %a.carousel-control-prev{"data-slide" => "prev", :href => "#plantCarousel", :role => "button"}
        %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
        %span.sr-only Previous
      %a.carousel-control-next{"data-slide" => "next", :href => "#plantCarousel", :role => "button"}
        %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
        %span.sr-only Next
    - elsif @plant.photo.length == 1
      = image_tag(@plant.photo[0].variant(resize: "350x350"), alt: "Photo of #{@plant.photo}") unless @plant.new_record?
  .col-md-7
    %h2
      %em
        = @plant.scientific_name.capitalize
      - if @plant.invasive
        (invasive)
    %p= @plant.description
    %p.citation= @plant.citation
    %table.table
      %thead
        %tr
          %th{scope: 'col'} Habitat Type
          %th{scope: 'col'} Tolerance
          %th{scope: 'col'} Invasive?
      %tbody
        %tr
          %td= @plant.habitat_type
          %td= @plant.tolerance
          %td{class: ('bg-danger' if @plant.invasive)}= @plant.invasive? ? 'Yes' : 'No'
